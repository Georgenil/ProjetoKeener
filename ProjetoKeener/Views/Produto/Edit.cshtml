@model ProjetoKeener.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Produto selecionado: " + Model.Nome;
}

<h4 style="padding-top: 30px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Obs" class="form-control"></textarea>
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Imagem Atual</label>
                <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 200px; height: 328px" />

            </div>

            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <div>
                    <input type="file" class="" id="ImagemUpload" name="ImagemUpload">
                    <label style="" class="" for="ImagemUpload"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Confirmar">
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';

        });
    </script>
}
