@model ProjetoKeener.Models.FornecedorViewModel

@{
    ViewData["Title"] = "Deseja excluir o fornecedor " + Model.Nome + "?";
}

<h1 style="padding-top: 50px">@ViewData["Title"] </h1>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TipoFornecedor)
        </dt>
        <dd>
            @if (Model.TipoFornecedor == ProjetoKeener.Entidades.Tipos.EnumFornecedor.PessoaFisica)
            {
                Model.Tipo = "Pessoa Física";
            }
            else
            {
                Model.Tipo = "Pessoa Jurídica";
            }
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-danger" type="submit" value="Delete" /> |
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>
